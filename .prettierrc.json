{
    "tabWidth": 2,
    "semi": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "parser": "flow",
    "overrides": [
        {
          "files": "*.ts",
          "options": {
            "parser": "typescript",
            "as": { "allowAsParameter": "true" }
          }
        }
      ]
  }